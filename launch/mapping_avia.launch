<launch>
<!-- Launch file for Livox AVIA LiDAR -->

	<arg name="rviz" default="false" />
	<node name="button_kill_node" pkg="fast_lio" type="simple_input.py" />
	<include file="$(find livox_ros_driver)/launch/livox_lidar_msg.launch" />

	<rosparam command="load" file="$(find fast_lio)/config/avia.yaml" />

	<param name="feature_extract_enable" type="bool" value="0"/>
	<param name="point_filter_num" type="int" value="3"/>
	<param name="max_iteration" type="int" value="3" />
	<param name="filter_size_surf" type="double" value="0.5" />
	<param name="filter_size_map" type="double" value="0.1" />
	<param name="cube_side_length" type="double" value="1000" />
	<param name="runtime_pos_log_enable" type="bool" value="0" />
    <node pkg="fast_lio" type="fastlio_mapping" name="laserMapping" output="log" /> 
	<node pkg="rosbag" type="record" name="rosbag_record_avia_raw_data" args="record -o /ssd/dataset/ --lz4 /livox/lidar /livox/imu" />

	<group if="$(arg rviz)">
	<node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find fast_lio)/rviz_cfg/loam_livox.rviz" />
	
	
	<!-- split size 1024 -->
	</group>

</launch>
